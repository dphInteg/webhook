<?xml version="1.0"?> 
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="dphinteg_webhook" sortOrder="999" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>DPH Webhook Configuration</label>
 
                <field id="enable_webhooks" translate="label comment" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
 
                <field id="webhook_url" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Webhook URL</label>
                    <depends>
                        <field id="enable_webhooks">1</field>
                    </depends>
                </field>
 
                <field id="webhook_user" translate="label comment" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Username</label>
                    <depends>
                        <field id="enable_webhooks">1</field>
                    </depends>
                </field>
 
                <field id="webhook_password" translate="label comment" type="password" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Password</label>
                    <depends>
                        <field id="enable_webhooks">1</field>
                    </depends>
                </field>
                
                <field id="product_info_url" translate="label comment" type="text" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Product Info URL</label>
                    <depends>
                        <field id="enable_webhooks">1</field>
                    </depends>
                </field>
                
                <field id="auth_key" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Authorization Key</label>
                    <depends>
                        <field id="enable_webhooks">1</field>
                    </depends>
                </field>
 
                <field id="enable_stack_trace" translate="label comment" type="select" sortOrder="35" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Stack Trace</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="enable_webhooks">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>